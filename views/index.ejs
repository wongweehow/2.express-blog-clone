<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/8059a7ba77.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="styles.css">
  <title>Daniel's Blog</title>
</head>
<body>
  
  <nav>
    <header>
      <div class="header-deco">
        <div class="header-deco-1"></div>
        <div class="header-deco-2"></div>
      </div>
      <div class="header-nav">
        <a href="#">daniel's blog</a>
        <button id="drop-down">
          <div class="line"></div>
          <div class="line"></div>
          <div class="line"></div>
        </button>
      </div>
    </header>
    <div class="nav-body">
      <form id="search-form">
        <label for="query">Search:</label>
        <div class="form-cluster">
          <input type="text" id="query" name="query">
          <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
      </form>
      <form id="subscribe-form">
        <label for="email">Subscribe to weekly news letter:</label>
        <div class="form-cluster">
          <input type="text" id="email" name="email">
          <button type="submit">Subscribe</button>
        </div>
      </form>
      <p id="disclaimer">
        <q>Disclaimer: this author has no social media accounts</q>
      </p>
    </div>
  </nav>

  <div class="container">

    <div id="blogpost-container" data-pagecount="<%= count %>">

      <% blogs.forEach(blog => { %>
        <div class="blogpost">
          <h1><%= blog.title %></h1>
          <%- blog.sanitizedHtml %>
          <h6><%= blog.dateCreated %></h6>
          
          <div class="share-links">
            <a href="#"><i class="fa-brands fa-square-facebook"></i></a>
            <a href="#"><i class="fa-brands fa-square-x-twitter"></i></a>
            <a href="#"><i class="fa-brands fa-linkedin"></i></a>
            <a href="#"><i class="fa-solid fa-link"></i></a>
          </div>
        </div>
      <% }) %>

    </div>

  </div>
  
  <script src="scripts/dropdown.js"></script>
  <script src="scripts/pagination.js"></script>

</body>
</html>